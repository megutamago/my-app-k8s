apiVersion: apps/v1
kind: Deployment
metadata:
  name: test-deployment
spec:
  selector:
    matchLabels:
      app: test
  replicas: 2
  template:
    metadata:
      labels:
        app: test
    spec:
      hostNetwork: true
      containers:
      - name: test
        image: melanmeg/testimage1:latest
        securityContext:
          privileged: true
        ports:
        - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: test-service
  labels:
    app: test
spec:
  type: NodePort
  ports:
  - port: 8080
    targetPort: 80
    nodePort: 30081
    protocol: TCP
  selector:
    app: test
